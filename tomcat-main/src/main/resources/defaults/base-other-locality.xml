<record id="locality" in-recordlist="no" separate-record="false" services-type="localityGroupList">
    <hassoftdelete>true</hassoftdelete>
    <section id="localityInformation">
        <repeat id="localityGroupList/localityGroup">
            <field id="fieldLocVerbatim" ui-search="repeatable"/>
            <field id="taxonomicRange"/>
            <field id="fieldLocPlace" autocomplete="place-place"/>
            <field id="fieldLocCounty"/>
            <field id="fieldLocState"/>
            <field id="fieldLocCountry"/>
            <field id="fieldLocHigherGeography">
                <options>
                        <option id="" default="yes">Please select a value</option>
                        <option id="pacificocean">Pacific Ocean</option>
                        <option id="North America">North America</option>
                </options>
            </field>
            <field id="vCoordinates"/>
            <field id="vOtherCoords"/>
            <field id="vLatitude"/>
            <field id="vLongitude"/>
            <field id="vCoordSys" autocomplete="vocab-vcoordsys" ui-type="enum"/>
            <field id="vSpatialReferenceSystem">
                <options>
                    <option id="" default="yes">Please select a value</option>
                    <option id="epsg4326-wgs84">EPSG:4326-WGS84</option>
                    <option id="epsg4269-nad83">EPSG:4269-NAD83</option>
                    <option id="epsg4267-nad27">EPSG:4267-NAD27</option>
                    <option id="unknown">Unknown</option>
                </options>
            </field>

            <field id="decimalLatitude" ui-type="validated" datatype="float"/>
            <field id="decimalLongitude" ui-type="validated" datatype="float"/>
            <field id="geodeticDatum">
                <options>
                    <option id="">Please select a value</option>
                    <option id="Not Recorded">Not Recorded</option>
                    <option id="ADG66">ADG66</option>
                    <option id="NAD27">NAD27</option>
                    <option id="NAD83">NAD83</option>
                    <option id="NAD83&amp;WGS84">NAD83&amp;WGS84</option>
                    <option id="WGS84">WGS84</option>
                </options>
            </field>
            <field id="coordUncertainty" ui-type="validated" datatype="float"/>
            <field id="coordUncertaintyUnit">
                <options>
                    <option id="" default="yes">Please select a value</option>
                    <option id="unknown">unknown</option>
                    <option id="feet">feet</option>
                    <option id="kilometers">kilometers</option>
                    <option id="meters">meters</option>
                    <option id="miles">miles</option>
                </options>
            </field>
            <field id="vDepth"/>
            <field id="minDepth" ui-type="validated" datatype="float"/>
            <field id="maxDepth" ui-type="validated" datatype="float"/>
            <field id="depthUnit">
                <options>
                    <option id="" default="yes">Please select a value</option>
                    <option id="uncertain">uncertain</option>
                    <option id="centimeters">centimeters</option>
                    <option id="inches">inches</option>
                    <option id="fathoms">fathoms</option>
                    <option id="feet">feet</option>
                    <option id="furlongs">furlongs</option>
                    <option id="kilometers">kilometers</option>
                    <option id="meters">meters</option>
                    <option id="miles">miles</option>
                    <option id="rods">rods</option>
                </options>
            </field>
            <field id="vElevation"/>
            <field id="minElevation" ui-type="validated" datatype="float"/>
            <field id="maxElevation" ui-type="validated" datatype="float"/>
            <field id="elevationUnit">
                <options>
                    <option id="" default="yes">Please select a value</option>
                    <option id="uncertain">uncertain</option>
                    <option id="feet">feet</option>
                    <option id="meters">meters</option>
                </options>
            </field>
            <field id="vDistanceAboveSurface"/>
            <field id="minDistanceAboveSurface" ui-type="validated" datatype="float"/>
            <field id="maxDistanceAboveSurface" ui-type="validated" datatype="float"/>
            <field id="distanceAboveSurfaceUnit">
                <options>
                    <option id="" default="yes">Please select a value</option>
                    <option id="uncertain">uncertain</option>
                    <option id="centimeters">centimeters</option>
                    <option id="inches">inches</option>
                    <option id="fathoms">fathoms</option>
                    <option id="feet">feet</option>
                    <option id="furlongs">furlongs</option>
                    <option id="kilometers">kilometers</option>
                    <option id="meters">meters</option>
                    <option id="miles">miles</option>
                    <option id="rods">rods</option>
                </options>
            </field>
            <field id="localityNote"/>
            <field id="localitySource"/>
            <field id="localitySourceDetail"/>

            <field id="pointRadiusSpatialFit"/>
            <field id="footprintWKT"/>
            <field id="footprintSRS"/>
            <field id="footprintSpatialFit"/>
            <field id="coordPrecision"/>
            <field id="geoRefencedBy"/>
            <group id="geoRefDateGroup" ui-type="groupfield/structureddate" primarykey="dateDisplayDate" ui-func="cspace.structuredDate"/>
            <field id="geoRefProtocol"><!-- See http://code.google.com/p/darwincore/wiki/Location#georeferenceProtocol -->
                <options>
                    <option id="" default="yes">Please select a value</option>
                    <option id="chapman-wieczorek-2006-guide-best-practices-georeferencing">Chapman, Wieczorek 2006, Guide to Best Practices for Georeferencing</option>
                    <option id="manis-herpnet-ornis-georeferencing-guidelines">MaNIS/HerpNet/ORNIS Georeferencing Guidelines</option>
                    <option id="georeferencing-dummies">Georeferencing For Dummies</option>
                    <option id="biogeomancer">BioGeomancer</option>
                </options>
            </field>
            <field id="geoRefSource"/>
            <field id="geoRefVerificationStatus"><!-- See http://code.google.com/p/darwincore/wiki/Location#georeferenceVerificationStatus -->
                <options>
                    <option id="" default="yes">Please select a value</option>
                    <option id="unverified">Unverified</option>
                    <option id="verified-data-custodian">Verified by data custodian</option>
                    <option id="verified-contributor">Verified by contributor</option>
                </options>
            </field>
            <field id="geoRefRemarks"/>
            <field id="geoRefPlaceName"/>
            
            <field id="collectionLocationVerbatim"></field>
            <field id="collectionPlace" autocomplete="place-place"/>
        </repeat>
    </section>
    
    <!-- Used to create a label. -->
    <section id="geoRefDetail"/>
</record>
