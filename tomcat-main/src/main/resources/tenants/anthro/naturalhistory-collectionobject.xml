<record id="collection-object" is-extension="true">
	<services-record-path id="naturalhistory">collectionobjects_naturalhistory:http://collectionspace.org/services/collectionobject/domain/naturalhistory,collectionobjects_naturalhistory</services-record-path>

	<!-- 
		This is a PAHMA-specific version of the naturalhistory-collectionobject configuration,
		which only uses a small subset of the fields in the default.
	-->

	<section id="identificationInformation">
		<repeat id="taxonomicIdentGroupList/taxonomicIdentGroup" section="naturalhistory">
			<field id="taxon" in-title="yes" mini="summary,search,list,relate" section="naturalhistory" autocomplete="taxon-taxon">
				<selector>taxonomic-identification-taxon</selector>
				<title-selector>titleBar-taxonomic-identification-taxon</title-selector>
			</field>
			<field id="qualifier" section="naturalhistory" seperate_ui_container="true">
				<selector>taxonomic-identification-qualifier</selector>
				<options>
					<option id="">(none)</option>
					<option id="affg">aff. (genus)</option>
					<option id="aff">aff. (species)</option>
					<option id="cfg">cf. (genus)</option>
					<option id="cf">cf. (species)</option>
					<option id="indet">indet.</option>
					<option id="spIndet">sp. indet.</option>
					<option id="spNov">sp. nov.</option>
					<option id="questioned">?</option>
					<option id="sensuLatu">sensu latu</option>
					<option id="sensuStricto">sensu stricto</option>
				</options>
			</field>
			<field id="identBy" section="naturalhistory" autocomplete="person-person,organization-organization">
				<selector>taxonomic-identification-ident-by</selector>
			</field>
			<group id="identDateGroup" ui-type="groupfield/structureddate" primarykey="dateDisplayDate" ui-func="cspace.structuredDate" section="naturalhistory">
				<selector>taxonomic-identification-ident-date</selector>

				<!-- These fields are defined here as a workaround to CSPACE-5085. See http://issues.collectionspace.org/browse/CSPACE-5085 for details. -->
				<field id="dateDisplayDate" section="naturalhistory"/>
				<field id="dateAssociation" section="naturalhistory"/>
				<field id="dateEarliestSingleYear" section="naturalhistory"/>
				<field id="dateEarliestSingleMonth" section="naturalhistory"/>
				<field id="dateEarliestSingleDay" section="naturalhistory"/>
				<field id="dateEarliestSingleEra" section="naturalhistory"/>
				<field id="dateEarliestSingleCertainty" section="naturalhistory"/>
				<field id="dateEarliestSingleQualifier" section="naturalhistory"/>
				<field id="dateEarliestSingleQualifierValue" section="naturalhistory"/>
				<field id="dateEarliestSingleQualifierUnit" section="naturalhistory"/>
				<field id="dateLatestYear" section="naturalhistory"/>
				<field id="dateLatestMonth" section="naturalhistory"/>
				<field id="dateLatestDay" section="naturalhistory"/>
				<field id="dateLatestEra" section="naturalhistory"/>
				<field id="dateLatestCertainty" section="naturalhistory"/>
				<field id="dateLatestQualifier" section="naturalhistory"/>
				<field id="dateLatestQualifierValue" section="naturalhistory"/>
				<field id="dateLatestQualifierUnit" section="naturalhistory"/>
				<field id="datePeriod" section="naturalhistory"/>
				<field id="dateNote" section="naturalhistory"/>
				<field id="dateEarliestScalarValue" section="naturalhistory"/>
				<field id="dateLatestScalarValue" section="naturalhistory"/>
				<field id="scalarValuesComputed" section="naturalhistory"/>
			</group>
			<field id="institution" section="naturalhistory" autocomplete="organization-organization">
				<selector>taxonomic-identification-institution</selector>
			</field>
			<field id="identKind" section="naturalhistory" seperate_ui_container="true">
				<selector>taxonomic-identification-ident-kind</selector>
				<options>
					<option id="">(none selected)</option>
					<option id="originalCatalogDetermination">original catalog determination</option>
					<option id="researcherDetermination">researcher determination</option>
					<option id="fide">fide</option>
					<option id="nomenclaturalChange">nomenclatural change</option>
					<option id="taxonomicChange">taxonomic change</option>
				</options>
			</field>
			<field id="reference" section="naturalhistory">
				<selector>taxonomic-identification-reference</selector>
			</field>
			<field id="refPage" section="naturalhistory">
				<selector>taxonomic-identification-reference-page</selector>
			</field>
			<field id="notes" section="naturalhistory">
				<selector>taxonomic-identification-notes</selector>
			</field>
		</repeat>

		<repeat id="annotationGroupList/annotationGroup" section="naturalhistory">
			<field id="annotationType" section="naturalhistory">
				<selector>collection-object-annotationType</selector>
				<options>
					<option id="" default="yes">(none selected)</option>
					<option id="ACC file code">ACC file code</option>
					<option id="Accession note">Accession note</option>
					<option id="AxesOrient/clock: reverse">AxesOrient/clock: reverse</option>
					<option id="Card information">Card information</option>
					<option id="Cataloging notes">Cataloging notes</option>
					<option id="CD id">CD id</option>
					<option id="Collection type">Collection type</option>
					<option id="Component prep comments">Component prep comments</option>
					<option id="Condition notes">Condition notes</option>
					<option id="Conservation notes">Conservation notes</option>
					<option id="Control possible">Control possible</option>
					<option id="Cultural modification note">Cultural modification note</option>
					<option id="Curatorial remarks">Curatorial remarks</option>
					<option id="Data entry notes">Data entry notes</option>
					<option id="Data error">Data error</option>
					<option id="Deaccession notes">Deaccession notes</option>
					<option id="Denomination">Denomination</option>
					<option id="Destructive sampling notes">Destructive sampling notes</option>
					<option id="Inventory remarks">Inventory remarks</option>
					<option id="Loan notes">Loan notes</option>
					<option id="Minting">Minting</option>
					<option id="NAGPRA archaeological evidence">NAGPRA archaeological evidence</option>
					<option id="NAGPRA background statement">NAGPRA background statement</option>
					<option id="NAGPRA bioevaluation data">NAGPRA bioevaluation data</option>
					<option id="NAGPRA inventory collection history">NAGPRA inventory collection history</option>
					<option id="NAGPRA inventory consultation">NAGPRA inventory consultation</option>
					<option id="NAGPRA location comment">NAGPRA location comment</option>
					<option id="NAGPRA research comments">NAGPRA research comments</option>
					<option id="NAGPRA updated curation summary">NAGPRA updated curation summary</option>
					<option id="NSF grant osteology data">NSF grant osteology data</option>
					<option id="NSF recataloging data">NSF recataloging data</option>
					<option id="Object count note">Object count note</option>
					<option id="Obverse type">Obverse type</option>
					<option id="Original ledger comments">Original ledger comments</option>
					<option id="Pathology notes">Pathology notes</option>
					<option id="Phase completed">Phase completed</option>
					<option id="Photo roll">Photo roll</option>
					<option id="Registration remark">Registration remark</option>
					<option id="Researcher comments">Researcher comments</option>
					<option id="Reverse type">Reverse type</option>
					<option id="Special collection">Special collection</option>
					<option id="Storage location notes">Storage location notes</option>
					<option id="Supplemental information">Supplemental information</option>
					<option id="TMS curatorial remarks">TMS curatorial remarks</option>
					<option id="TMS edition field">TMS edition field</option>
					<option id="Verbatim ledger">Verbatim ledger</option>
				</options>
			</field>
			<field id="annotationNote" section="naturalhistory">
				<selector>collection-object-annotationNote</selector>
			</field>
			<field id="annotationDate" section="naturalhistory" ui-type="date">
				<!-- FIXME: This field is defined as a string in the database. At some point we should add datatype="date" here, and convert that column to a date. -->
				<selector>collection-object-annotationDate</selector>
			</field>
			<field id="annotationAuthor" section="naturalhistory" autocomplete="person-person">
				<selector>collection-object-annotationAuthor</selector>
			</field>
		</repeat>
	</section>
</record>